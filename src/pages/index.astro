<script>
	// Live Demo Logic
	const btn = document.getElementById('demo-btn');
	const input = document.getElementById('demo-input') as HTMLInputElement;
	const output = document.getElementById('demo-output');
	const spinner = document.getElementById('demo-spinner');

	if (btn && input && output && spinner) {
		btn.addEventListener('click', async () => {
			const domain = input.value;
			if (!domain) return;

			// UI Loading State
			btn.setAttribute('disabled', 'true');
			spinner.classList.remove('hidden');
			output.innerHTML = '// Scanning...';

			try {
				// Use correct endpoint without trailing slash (Backend matches "/api/v1/check")
				const apiUrl = 'https://threats.cyberapi.io/api/v1/check?domain=' + encodeURIComponent(domain);
				
				const startTime = performance.now();
				const res = await fetch(apiUrl, {
					headers: {
						'X-API-Key': 'demo'
					}
				});
				const data = await res.json();
				const endTime = performance.now();
				const latency = Math.round(endTime - startTime);

				const formatted = JSON.stringify(data, null, 2);
				
				// Highlight malicious
				const colorized = formatted
					.replace(/"risk_score": (\d+)/, (match, score) => {
						const num = parseInt(score);
						const color = num > 80 ? 'text-red-500' : (num > 40 ? 'text-yellow-400' : 'text-green-400');
						return `"risk_score": <span class="${color}">${score}</span>`;
					})
					.replace(/"verdict": "(.*?)"/, '"verdict": <span class="text-cyan-300">"$1"</span>');

				output.innerHTML = `${colorized}\n\n<span class="text-slate-500">// Latency: ${latency}ms</span>`;
			} catch (e) {
				output.innerHTML = `<span class="text-red-500">Error: Could not connect to API. \nPlease check your connection or try again later.</span>`;
			} finally {
				btn.removeAttribute('disabled');
				spinner.classList.add('hidden');
						}
		});
	}

	// Lightweight API Status Checker
	// Non-blocking, 2s timeout, graceful fallback
	(async function checkAPIStatus() {
		const badge = document.getElementById('api-status-badge');
		const dot = document.getElementById('api-status-dot');
		const text = document.getElementById('api-status-text');
		
		if (!badge || !dot || !text) return;
		
		try {
			const controller = new AbortController();
			const timeoutId = setTimeout(() => controller.abort(), 2000);
			
			const response = await fetch('https://threats.cyberapi.io/health', {
				signal: controller.signal,
				cache: 'no-cache'
			});
			
			clearTimeout(timeoutId);
			
			if (response.ok) {
				// Green - All systems operational
				badge.className = 'inline-flex items-center gap-2 px-3 py-1 rounded-full bg-green-950/30 border border-green-500/30 text-green-300 text-xs font-bold mb-8 uppercase tracking-wider backdrop-blur-sm';
				dot.className = 'w-1.5 h-1.5 rounded-full bg-green-400';
				text.textContent = 'System Operational';
			} else {
				// Yellow - API issues
				badge.className = 'inline-flex items-center gap-2 px-3 py-1 rounded-full bg-yellow-950/30 border border-yellow-500/30 text-yellow-300 text-xs font-bold mb-8 uppercase tracking-wider backdrop-blur-sm';
				dot.className = 'w-1.5 h-1.5 rounded-full bg-yellow-400';
				text.textContent = 'Experiencing Issues';
			}
		} catch (error) {
			// Red - API offline (timeout or network error)
			badge.className = 'inline-flex items-center gap-2 px-3 py-1 rounded-full bg-red-950/30 border border-red-500/30 text-red-300 text-xs font-bold mb-8 uppercase tracking-wider backdrop-blur-sm';
			dot.className = 'w-1.5 h-1.5 rounded-full bg-red-400';
			text.textContent = 'API Offline';
		}
	})();
</script>
